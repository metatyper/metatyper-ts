{
    "name": "metatyper",
    "version": "0.2.0",
    "license": "MIT",
    "description": "use built-in features to do more",
    "author": {
        "name": "Vadzim Sharai",
        "email": "vadzimsharai@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/metatyper/metatyper-ts.git"
    },
    "bugs": {
        "url": "https://github.com/metatyper/metatyper-ts/issues"
    },
    "homepage": "https://github.com/metatyper/metatyper-ts",
    "tags": [
        "typescript",
        "schema",
        "validation",
        "serialization",
        "parser",
        "type",
        "data",
        "inference"
    ],
    "keywords": [
        "typescript",
        "schema",
        "validation",
        "serialization",
        "parser",
        "type",
        "data",
        "inference"
    ],
    "main": "./lib/index.js",
    "module": "./lib/index.mjs",
    "types": "./index.d.ts",
    "browser": "./lib/metatyper.min.js",
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "require": "./lib/index.js",
            "import": "./lib/index.mjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "/lib",
        "/index.d.ts"
    ],
    "scripts": {
        "sandbox": "ts-node dev/sandbox.ts",
        "lint": "prettier --check \"./src/**/*.ts\"",
        "lint:fix": "prettier --write \"./src/**/*.ts\"",
        "test:types": "tsc --noEmit --project  ./tsconfig.json",
        "test:jest": "jest",
        "test": "yarn lint && yarn test:types && yarn test:jest",
        "build": "rimraf ./lib && yarn build:tsc && yarn build:rollup",
        "build:tsc": "rimraf ./lib && tsc --pretty --project ./tsconfig.build.json",
        "build:rollup": "rimraf ./lib && rollup -c",
        "benchmark": "ts-node test/benchmark/index.ts"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.20",
        "@babel/preset-typescript": "^7.23.0",
        "@jest/globals": "^29.7.0",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-node-resolve": "^15.2.1",
        "@rollup/plugin-terser": "^0.4.3",
        "@rollup/plugin-typescript": "^11.1.4",
        "@types/jest": "^29.5.5",
        "@types/json-schema": "^7.0.12",
        "@types/node": "^20.4.9",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "benchmark": "^2.1.4",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-unused-imports": "^3.0.0",
        "jest": "^29.7.0",
        "json-schema": "^0.4.0",
        "prettier": "^3.0.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^4.0.7",
        "rollup": "^3.29.4",
        "rollup-plugin-filesize": "^10.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "sideEffects": false
}
